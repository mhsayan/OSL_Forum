@model OSL.Forum.Web.Models.CreateTopicModel
@{
    ViewBag.Title = "Create Topic";
}
<link href="~/Themes/AdminLTE/plugins/summernote/summernote.css" rel="stylesheet" />
<script src="~/Themes/AdminLTE/plugins/summernote/summernote.js"></script>


<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Create New Topic</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Topics</a></li>
                    <li class="breadcrumb-item active">Create Topic</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>


<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8">
                <h3 class="text-primary text-bold">
                    @Model.Forum.Category.Name / @Model.Forum.Name
                </h3>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">

                <div class="card card-primary">
                    <div class="card-header text-uppercase">
                        <b>Create New Topic</b>
                    </div>
                    <div class="card-body">
                        @using (Html.BeginForm("Create", "Topic", FormMethod.Post, new { @class = "form-horizontal ml-3 mb-3", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary("", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.ForumId)
                            <div class="form-group">
                                @Html.LabelFor(m => m.Name, new { @class = "col-md-6 control-label" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control col-md-6" })
                                    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.Description, new { @class = "col-md-6 control-label" })
                                <div class="col-md-10">
                                    @Html.TextAreaFor(m => m.Description, new { rows = "10", cols = "150", @class = "form-control col-md-6 topicDescription", @maxlength = "10000", @minlength = "50" })
                                    @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" class="btn btn-primary" value="Submit" />
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        $('.topicDescription').summernote({
            height: 100,
            minHeight: 50,
            maxHeight: 200,
            focus: true,
            toolbar: [
                ['style', ['style']],
                ['font', ['bold', 'underline', 'clear']],
                ['color', ['color']],
                ['para', ['ul', 'ol', 'paragraph']],
                ['table', ['table']],
                ['view', ['fullscreen', 'codeview', 'help']]
            ]
        });
    </script>
}
